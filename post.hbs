{{!< layout}}

{{#post}}
  <a href="/" class="block max-w-max sm:mt-4 text-rose-600 font-bold text-sm">&larr; ben.cv</a>

  <div class="mt-12 sm:mt-24"></div>

  <div class="space-y-1 sm:space-y-2">
    <h1 class="text-3xl sm:text-4xl text-neutral-900 font-extrabold">{{title}}</h1>
    <p class="text-neutral-500 font-medium">{{date format="MMMM Do, YYYY"}}</p>
  </div>

  <div class="mt-8">
    {{#> prose}}
      {{content}}
    {{/prose}}

    {{#has tag="#daily"}}
      <div class="mt-16 space-y-4 sm:space-y-0 sm:flex sm:justify-between">
        <div>
          {{#get "posts"
            filter="tags:daily+id:>{{id}}"
            limit="1"
            order="id asc"}}
            {{#foreach posts}}
              <p>
                <a href="{{url}}" class="text-rose-600 font-bold text-sm">&larr; Previous day ({{title}})</a>
              </p>
            {{/foreach}}
          {{/get}}
        </div>
        <div>
          {{#get "posts"
            filter="tags:daily+id:<{{id}}"
            limit="1"
            order="id desc"}}
            {{#foreach posts}}
              <p class="text-right">
                <a href="{{url}}" class="text-rose-600 font-bold text-sm">Next day ({{title}}) &rarr;</a>
              </p>
            {{/foreach}}
          {{/get}}
        </div>
      </div>
    {{/has}}
  </div>
{{/post}}
