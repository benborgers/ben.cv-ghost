<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{meta_title}}</title>

    <link rel="stylesheet" href="{{ asset "built.css" }}" />

    {{ghost_head}}
  </head>
  <body class="antialiased bg-neutral-50 text-neutral-700 p-4 pb-36">
    <div class="max-w-prose mx-auto">{{{body}}}</div>

    {{! Add nice checkbox icons to checklists. }}
    <script>
      document.querySelectorAll('li').forEach(el => {
        if (el.innerHTML.startsWith('[ ] ')) {
          el.innerHTML = el.innerHTML.replace('[ ] ', `
            <span class="h-4 w-4 bg-current rounded-full inline-block ml-0.5 mr-2 translate-y-0.5"></span>
          `);
        }

        if (el.innerHTML.startsWith('[x] ')) {
          el.innerHTML = el.innerHTML.replace('[x] ', `
            <svg xmlns="http://www.w3.org/2000/svg" class="sm:h-5 w-5 inline-block mr-2 -translate-y-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          `);
        }
      })
    </script>

    {{ghost_foot}}
  </body>
</html>
